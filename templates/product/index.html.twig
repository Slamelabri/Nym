{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle }} - Nym{% endblock %}

{% block body %}
<div class="container py-3">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            {% if category is defined %}
                <li class="breadcrumb-item active">{{ category.name }}</li>
            {% elseif searchQuery is defined %}
                <li class="breadcrumb-item active">Recherche : "{{ searchQuery }}"</li>
            {% else %}
                <li class="breadcrumb-item active">Tous les produits</li>
            {% endif %}
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">{{ pageTitle }}</h1>
            <p class="text-muted text-small mb-0">
                {{ products.getTotalItemCount }} résultat{{ products.getTotalItemCount > 1 ? 's' : '' }}
                {% if searchQuery is defined %}
                    pour "{{ searchQuery }}"
                {% endif %}
            </p>
        </div>
        
        <!-- Sorting -->
        <div class="dropdown">
            <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Trier par
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Pertinence</a></li>
                <li><a class="dropdown-item" href="#">Prix croissant</a></li>
                <li><a class="dropdown-item" href="#">Prix décroissant</a></li>
                <li><a class="dropdown-item" href="#">Nouveautés</a></li>
                <li><a class="dropdown-item" href="#">Meilleures ventes</a></li>
                <li><a class="dropdown-item" href="#">Note client</a></li>
            </ul>
        </div>
    </div>

    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-md-3 mb-4">
            <div class="border rounded p-3">
                <h6 class="mb-3">Affiner par</h6>
                
                <!-- Category Filter -->
                <div class="mb-4">
                    <h6 class="text-small mb-2">Catégorie</h6>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_products') }}" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            Toutes les catégories
                        </a>
                        <a href="{{ path('app_products_by_category', {slug: 'electronique'}) }}" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            Électronique
                        </a>
                        <a href="{{ path('app_products_by_category', {slug: 'vetements'}) }}" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            Vêtements
                        </a>
                        <a href="{{ path('app_products_by_category', {slug: 'livres'}) }}" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            Livres
                        </a>
                        <a href="{{ path('app_products_by_category', {slug: 'maison-jardin'}) }}" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            Maison & Jardin
                        </a>
                    </div>
                </div>
                
                <!-- Price Filter -->
                <div class="mb-4">
                    <h6 class="text-small mb-2">Prix</h6>
                    <div class="row g-2">
                        <div class="col-6">
                            <input type="number" class="form-control form-control-sm" placeholder="Min">
                        </div>
                        <div class="col-6">
                            <input type="number" class="form-control form-control-sm" placeholder="Max">
                        </div>
                    </div>
                    <button class="btn btn-outline-primary btn-sm mt-2 w-100">Appliquer</button>
                </div>
                
                <!-- Rating Filter -->
                <div class="mb-4">
                    <h6 class="text-small mb-2">Note client</h6>
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            <div class="stars text-warning">
                                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                            </div>
                            et plus
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            <div class="stars text-warning">
                                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                            </div>
                            et plus
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-1 text-small">
                            <div class="stars text-warning">
                                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                            </div>
                            et plus
                        </a>
                    </div>
                </div>
                
                <!-- Availability Filter -->
                <div class="mb-4">
                    <h6 class="text-small mb-2">Disponibilité</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="inStock">
                        <label class="form-check-label text-small" for="inStock">
                            En stock
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="freeShipping">
                        <label class="form-check-label text-small" for="freeShipping">
                            Livraison gratuite
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-md-9">
            {% if products|length > 0 %}
                <div class="products-grid">
                    {% for product in products %}
                        <div class="product-card">
                            <div class="product-image">
                                {% if product.categories|length > 0 %}
                                    {% set category = product.categories|first %}
                                    {% if category.slug == 'electronique' %}
                                        <i class="fas fa-laptop"></i>
                                    {% elseif category.slug == 'vetements' %}
                                        <i class="fas fa-tshirt"></i>
                                    {% elseif category.slug == 'livres' %}
                                        <i class="fas fa-book"></i>
                                    {% elseif category.slug == 'maison-jardin' %}
                                        <i class="fas fa-seedling"></i>
                                    {% else %}
                                        <i class="fas fa-box"></i>
                                    {% endif %}
                                {% else %}
                                    <i class="fas fa-box"></i>
                                {% endif %}
                                
                                <!-- Badges -->
                                {% if product.price < 50 %}
                                    <span class="position-absolute top-0 start-0 badge bg-primary m-2 text-xs">
                                        Choix Nym
                                    </span>
                                {% endif %}
                            </div>
                            
                            <div class="product-info">
                                <h3 class="product-title">
                                    <a href="{{ path('app_product_show', {id: product.id}) }}">{{ product.name }}</a>
                                </h3>
                                
                                <div class="product-rating">
                                    <div class="stars">
                                        {% set rating = random(3, 5) %}
                                        {% for i in 1..5 %}
                                            {% if i <= rating %}
                                                <i class="fas fa-star"></i>
                                            {% else %}
                                                <i class="far fa-star"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <span class="count">({{ random(10, 500) }})</span>
                                </div>
                                
                                <div class="mb-2">
                                    {% if product.price > 100 %}
                                        {% set discount = random(5, 20) %}
                                        {% set originalPrice = (product.price * (100 + discount) / 100)|round(2) %}
                                        <span class="product-price-small">{{ originalPrice|number_format(2, ',', ' ') }} €</span>
                                        <span class="badge bg-secondary text-xs">-{{ discount }}%</span>
                                    {% endif %}
                                </div>
                                
                                <div class="product-price">{{ product.price|number_format(2, ',', ' ') }} €</div>
                                
                                <div class="product-seller">
                                    Vendu par {{ product.seller.companyName ?: (product.seller.firstname ~ ' ' ~ product.seller.lastname) }}
                                </div>
                                
                                <div class="product-actions">
                                    <div class="stock-info {% if product.stock > 10 %}in-stock{% elseif product.stock > 0 %}low-stock{% else %}out-of-stock{% endif %}">
                                        {% if product.stock > 10 %}
                                            {% if product.price > 25 %}
                                                Livraison GRATUITE demain
                                            {% else %}
                                                En stock
                                            {% endif %}
                                        {% elseif product.stock > 0 %}
                                            Plus que {{ product.stock }} en stock - commandez vite
                                        {% else %}
                                            Temporairement en rupture de stock
                                        {% endif %}
                                    </div>
                                    
                                    {% if product.stock > 0 %}
                                        <button class="btn btn-primary btn-sm w-100 mt-2">
                                            Ajouter au panier
                                        </button>
                                    {% endif %}
                                </div>
                                
                                <div class="mt-2 text-xs text-muted">
                                    Ajouté le {{ product.createdAt|date('d/m/Y') }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-4">
                    {{ knp_pagination_render(products) }}
                </nav>
                
            {% else %}
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>Aucun résultat</h4>
                    {% if searchQuery is defined %}
                        <p class="text-muted">
                            Aucun produit trouvé pour "{{ searchQuery }}".
                            <br>Vérifiez l'orthographe ou essayez des mots-clés plus généraux.
                        </p>
                        <a href="{{ path('app_products') }}" class="btn btn-outline-primary">
                            Parcourir tous les produits
                        </a>
                    {% else %}
                        <p class="text-muted">Aucun produit disponible dans cette section.</p>
                        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                            Retour à l'accueil
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}