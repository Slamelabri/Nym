{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="auth-card">
                <div class="text-center mb-4">
                    <h1 class="h3 mb-3">Se connecter</h1>
                    <p class="text-muted">Accédez à votre compte Nym</p>
                </div>

                <!-- Messages flash de succès -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                    </div>
                {% endfor %}

                <!-- Messages flash d'erreur -->
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                    </div>
                {% endfor %}

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Adresse email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" name="_remember_me" class="form-check-input" id="remember_me">
                        <label class="form-check-label" for="remember_me">
                            Se souvenir de moi
                        </label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" type="submit">
                            Se connecter
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Pas encore de compte ?
                        <a href="{{ path('app_register') }}" class="text-decoration-none">S'inscrire</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.auth-card {
    background: var(--white);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--shadow);
}

[data-bs-theme="dark"] .auth-card {
    background: var(--bg-secondary);
    border-color: var(--border);
}

.form-label {
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.form-control {
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    transition: all 0.2s ease;
}

.form-control:focus {
    border-color: var(--black);
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
    background: var(--white);
}

[data-bs-theme="dark"] .form-control {
    background: var(--bg-tertiary);
    border-color: var(--border);
    color: var(--text-primary);
}

[data-bs-theme="dark"] .form-control:focus {
    border-color: var(--white);
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
    background: var(--bg-primary);
}

.form-check-input:checked {
    background-color: var(--black);
    border-color: var(--black);
}

[data-bs-theme="dark"] .form-check-input:checked {
    background-color: var(--white);
    border-color: var(--white);
}

.alert-danger {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
    border-radius: 8px;
}

.alert-success {
    background-color: #d1edff;
    border-color: #bee5eb;
    color: #0c5460;
    border-radius: 8px;
}

[data-bs-theme="dark"] .alert-danger {
    background-color: #2c1517;
    border-color: #842029;
    color: #ea868f;
}

[data-bs-theme="dark"] .alert-success {
    background-color: #0f2419;
    border-color: #0a3622;
    color: #75dd99;
}
</style>
{% endblock %}